@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome To The World Of Animations</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="card-columns">
    @foreach (var prod in Model.products)
    {

       <div class="card">
        <div class="card-img" style="background-image: url('@prod.Image');"></div>
        <div class="card-body" >
            <h4 class="card-title" style="text-align:center; font-size:20px; border:2px solid blue; background-color:cadetblue;">@prod.Title</h4>
        </div>
        
       </div>
        
        
    }
</div>